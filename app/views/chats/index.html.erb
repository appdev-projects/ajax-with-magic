<% content_for :title, "Chats" %>

<div id="chats">
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h1 class="h6 m-0">
        Chats
      </h1>

      <%= button_to "New chat", chats_path, class: "btn btn-sm btn-outline-success" %>
    </div>

    <div class="list-group list-group-flush">
      <% @chats.each do |chat| %>
        <%= link_to chat.subject, chat, class: "list-group-item list-group-item-action" %>
      <% end %>
    </div>
  </div>
</div>
